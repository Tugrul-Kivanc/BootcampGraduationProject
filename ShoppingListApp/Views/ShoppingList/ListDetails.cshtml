@model IEnumerable<ShoppingListViewModel>

@{
    ViewData["Title"] = @ViewBag.ListName;
}

<h1>@ViewBag.ListName</h1>
<p>
    <a asp-action="AddProduct" asp-route-listId="@ViewBag.ShoppingListId">Add a Product</a>
</p>
<hr />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Product")
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@item.Image" alt="@item.Name" width="50" height="50">
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a asp-action="EditProduct" asp-route-listId="@ViewContext.RouteData.Values["id"]" asp-route-productId="@item.ProductId">Edit</a> |
                    <a asp-action="RemoveProduct" asp-route-listId="@ViewContext.RouteData.Values["id"]" asp-route-productId="@item.ProductId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<div>
    <a asp-action="List">Back to Lists</a>
</div>
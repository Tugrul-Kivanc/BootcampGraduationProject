@using ShoppingListApp.ViewModels;
@model IEnumerable<ShoppingListViewModel>

@{
    // TODO Display the list Name
    ViewData["Title"] = "ListDetails";
}

<h1>ListDetails</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@item.Image" alt="@item.Name" width="50" height="50">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td>
                <a asp-action="EditProduct" asp-route-listId="@Url.ActionContext.RouteData.Values["id"]" asp-route-productId="@item.ProductId">Edit</a> |
                <a asp-action="DeleteProduct" asp-route-id="@item.ProductId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-action="AddProduct" asp-route-id="@ViewBag.ShoppingListId">Add a Product</a>
</p>

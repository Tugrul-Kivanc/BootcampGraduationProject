@model ShoppingListViewModel

@{
    ViewData["Title"] = "Remove Product";
}

<h1>Remove Product</h1>

<h3>Are you sure you want to remove this product from the list?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Image" alt="@Model.Name" width="50" height="50">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Notes)
        </dd>
    </dl>

    <form asp-action="RemoveProduct">
        <input type="hidden" asp-for="ProductId" value="@ViewContext.RouteData.Values["productId"]" />
        <input type="hidden" asp-for="ShoppingListId" value="@ViewContext.RouteData.Values["listId"]" />
        <input type="submit" value="Remove" class="btn btn-danger" /> |
        <a asp-action="ListDetails" asp-route-id="@ViewContext.RouteData.Values["listId"]">Back to List</a>
    </form>
</div>